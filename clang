#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <math.h>

int main(int argc, string argv[])
{
    int k = atoi(argv[1]);
    int i = log10(k) + 1;
    if (argc == 2 && atoi(argv[1]) != 0 && (i == strlen(argv[1])))
    {
        string a = get_string("plaintext: ");
        printf("ciphertext: ");
        for (int j =0; j < strlen(a); j++)
        {
            char c = a[j]; 
            char d = ((c + k - 65) % 26 + 65); // is upper 
            char e = ((c + k - 97) % 26 + 97); // is lower
            char g = a[j];
            if (c >= 65 && c <= 90) 
            { 
               printf("%c", d);
            } 
            else if (c >= 97 && c <= 122)
            { 
                printf("%c", e);
            }
            else if (c)
            {
                printf("%c", g);
            }
             
        }
        printf("\n");
    }
    else 
    {
        printf("Usage: ./caesar key\n");
    }
}   

